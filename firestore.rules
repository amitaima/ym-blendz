rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(docData) {
      return request.auth != null && request.auth.uid == docData.customerId;
    }

    match /users/{userId} {
      allow read, write: if isAdmin() || request.auth.uid == userId;
    }

    match /bookings/{bookingId} {
      // Allow read for availability checks (document doesn't exist),
      // or if the user is the owner, or if admin.
      allow read: if (request.auth != null && resource == null) || 
                   (resource != null && isOwner(resource.data)) || 
                   isAdmin();
      
      // Users can only create bookings for themselves.
      allow create: if isOwner(request.resource.data);

      // Admins or owners can update and delete bookings.
      allow update, delete: if isAdmin() || isOwner(resource.data);
    }

    match /waitlist/{waitlistId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
    }

    match /expenses/{expenseId} {
      allow read, create, update, delete: if isAdmin();
    }

    match /config/business {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
